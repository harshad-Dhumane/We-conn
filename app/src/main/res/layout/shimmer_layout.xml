<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@color/shimmer_color"
                    android:layout_weight="0.1"
                    app:civ_border_width="1dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmer_color"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.8"
                    android:textAppearance="@style/TextAppearance.FontPath"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/idFLContainer"
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    app:layout_constraintDimensionRatio="1:1">

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@color/shimmer_color"
                        app:layout_constraintDimensionRatio="1:1" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@color/shimmer_color" />
                    <ImageView
                        android:id="@+id/idPostCommentIV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@color/shimmer_color"
                        android:layout_marginStart="20dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="20dp"
                        android:src="@color/shimmer_color" />
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="27dp"
                        android:layout_height="27dp"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="20dp"
                        android:src="@color/shimmer_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">
                    <TextView
                        android:id="@+id/idLikesCountTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginVertical="3dp"
                        android:ems="5"
                        android:background="@color/shimmer_color"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/idUserCaptionName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginVertical="3dp"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:background="@color/shimmer_color"/>
                    <TextView
                        android:id="@+id/idCaptionTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginVertical="3dp"
                       android:ems="8"
                        android:background="@color/shimmer_color"/>
                    <TextView
                        android:id="@+id/idCommentCountTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:background="@color/shimmer_color"
                        android:layout_marginStart="10dp"
                        android:layout_marginVertical="3dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/cardview_light_background"
                    android:layout_marginTop="5dp"/>



            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>