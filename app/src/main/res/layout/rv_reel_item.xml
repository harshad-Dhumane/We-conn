<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <VideoView
        android:id="@+id/idReekVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <ProgressBar
        android:id="@+id/idReelPB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:indeterminateTint="@color/white"
        android:indeterminateTintMode="src_atop"
        android:visibility="visible"/>
    <LinearLayout
        android:id="@+id/idverticalLL"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="1"

         >
        <ImageView
            android:id="@+id/idCameraBtn"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_camera"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.9"/>
        <ImageView
            android:id="@+id/idReelLikeIV"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_heart_white"
            android:layout_margin="10dp"
           />
        <TextView
            android:id="@+id/idVideolikecnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.4 m"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"/>
        <ImageView
            android:id="@+id/idReelCommentIV"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_comment_white"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/idVideoCommentcnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="53.2K"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/idReelSendIV"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_share_white"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/idReelMoreOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_white"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/idUserImageReel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/myprofilepic"/>
            <TextView
                android:id="@+id/idUserNameReel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/baby_color"
                android:layout_gravity="center"
                android:text="@string/user_name_here"/>
        </LinearLayout>
        <TextView
            android:id="@+id/idCaptionReel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/here_is_my_caption"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="10,735 likes"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>